<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Soflomo\Portfolio\Entity\ItemBase" repository-class="Soflomo\Portfolio\Repository\Item">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="title" type="string" unique="false" nullable="false" />
        <field name="lead"  type="text"   unique="false" nullable="true" />
        <field name="body"  type="text"   unique="false" nullable="true" />

        <many-to-one field="portfolio" target-entity="Soflomo\Portfolio\Entity\Portfolio" nullable="false" />
    </mapped-superclass>
</doctrine-mapping>